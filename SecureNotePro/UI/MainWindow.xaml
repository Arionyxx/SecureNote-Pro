<Window x:Class="SecureNotePro.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureNote Pro - Educational RE Practice"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“ SecureNote Pro"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="LicenseStatusText"
                               Text="[FREE VERSION]"
                               Foreground="#FFD700"
                               FontSize="12"
                               FontWeight="Bold"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ“Š Export (PRO)"
                            x:Name="BtnExport"
                            Style="{StaticResource PrimaryButton}"
                            Background="#FF9800"
                            Margin="5,0"
                            Click="BtnExport_Click"/>
                    <Button Content="ðŸ” Activate License"
                            x:Name="BtnActivate"
                            Style="{StaticResource PrimaryButton}"
                            Background="#4CAF50"
                            Margin="5,0"
                            Click="BtnActivate_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Notes List -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="10"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="My Notes"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <Button Grid.Row="1"
                            Content="âž• New Note"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnNewNote_Click"
                            Margin="0,0,0,10"/>

                    <ListBox Grid.Row="2"
                             x:Name="NotesListBox"
                             SelectionChanged="NotesListBox_SelectionChanged"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Modified, StringFormat='Modified: {0:MMM dd, yyyy}'}"
                                               FontSize="10"
                                               Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                        <TextBlock x:Name="TrialInfoText"
                                   Text="Trial: 30 days remaining"
                                   FontSize="11"
                                   Foreground="Gray"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Note Editor -->
            <Border Grid.Column="1"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="15">
                <Grid x:Name="EditorPanel">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBox x:Name="TitleTextBox"
                             FontSize="20"
                             FontWeight="Bold"
                             BorderThickness="0,0,0,2"
                             Padding="5"
                             Margin="0,0,0,10"/>

                    <!-- Premium Features Bar -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <Button Content="ðŸ·ï¸ Tags (PRO)"
                                x:Name="BtnTags"
                                Click="BtnTags_Click"
                                Margin="0,0,5,0"
                                Padding="8,4"
                                Background="#FFC107"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="â­ Favorite (PRO)"
                                x:Name="BtnFavorite"
                                Click="BtnFavorite_Click"
                                Margin="0,0,5,0"
                                Padding="8,4"
                                Background="#FFC107"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="ðŸ“ Categories (PRO)"
                                x:Name="BtnCategory"
                                Click="BtnCategory_Click"
                                Margin="0,0,5,0"
                                Padding="8,4"
                                Background="#FFC107"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="ðŸ” Search (PRO)"
                                x:Name="BtnSearch"
                                Click="BtnSearch_Click"
                                Padding="8,4"
                                Background="#FFC107"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>

                    <!-- Content -->
                    <TextBox x:Name="ContentTextBox"
                             Grid.Row="2"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             BorderThickness="1"
                             Padding="8"
                             FontSize="14"/>

                    <!-- Save Button -->
                    <Button Grid.Row="3"
                            Content="ðŸ’¾ Save Note"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnSave_Click"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#E0E0E0"
                Padding="10,5">
            <TextBlock x:Name="StatusText"
                       Text="Ready"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>

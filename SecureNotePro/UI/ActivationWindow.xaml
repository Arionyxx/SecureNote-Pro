<Window x:Class="SecureNotePro.UI.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate SecureNote Pro"
        Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="🔐 Activate SecureNote Pro"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Enter your license key to unlock all premium features"
                       FontSize="14"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Content -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="15">
            <StackPanel>
                <TextBlock Text="License Key:"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="LicenseKeyTextBox"
                         FontFamily="Consolas"
                         FontSize="14"
                         Padding="8"
                         MaxLength="19"
                         Margin="0,0,0,15"
                         TextChanged="LicenseKeyTextBox_TextChanged"/>

                <TextBlock x:Name="ValidationMessageText"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           Foreground="Gray"/>

                <Border Background="#FFF3E0"
                        BorderBrush="#FF9800"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="ℹ️ For educational use:"
                                   FontWeight="Bold"
                                   Foreground="#E65100"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Check the README.md file for valid license keys to test the activation system."
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#E65100"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Cancel"
                    Click="BtnCancel_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    Background="Gray"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="BtnActivate"
                    Content="Activate"
                    Click="BtnActivate_Click"
                    Style="{StaticResource PrimaryButton}"
                    Padding="20,8"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
